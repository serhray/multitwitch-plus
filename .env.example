# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Server Configuration
PORT=5001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://your-domain.vercel.app
CLIENT_URL=https://your-domain.vercel.app

# Vercel Configuration
VERCEL_URL=your-domain.vercel.app

# Client Environment Variables (for React)
REACT_APP_TWITCH_CLIENT_ID=your_twitch_client_id_here
REACT_APP_SERVER_URL=https://your-domain.vercel.app
REACT_APP_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXXX
REACT_APP_ADSENSE_BANNER_SLOT=1234567890
REACT_APP_ADSENSE_SIDEBAR_SLOT=0987654321
REACT_APP_ENABLE_ADS=true
REACT_APP_PREMIUM_MODE=false

# Database (if needed for user sessions/rooms)
DATABASE_URL=your_database_url_here

# CORS Origins
CORS_ORIGIN=http://localhost:3000
